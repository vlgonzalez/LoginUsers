@model LoginUsers.ViewModels.EditUserVM

@{
    ViewData["Title"] = "Editar Usuário";
}

<h2>@ViewData["Title"]</h2>

<form id="editUserForm">
    <input type="hidden" id="userId" value="@Model.Id" />

    <div class="form-group">
        <label for="name">Nome</label>
        <input id="name" class="form-control" value="@Model.Name" />
        <span id="nameError" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input id="email" class="form-control" value="@Model.Email" />
        <span id="emailError" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-primary" id="saveButton">Salvar</button>
        <a href="@Url.Action("ListUsers", "Home")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@section Scripts {
    <script src="~/js/editUser.js"></script>
}
